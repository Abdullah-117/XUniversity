@{
    ViewBag.Title = "Signup";
}



<body>

    <div>

        <center>
            <div class="Rfeilds2">

                <form action="https://localhost:44311/Home/index">

                    <h3> <b> SignUp </b> </h3>
                    <hr />

                    <label for="Fname">
                        First name
                    </label>

                    <input type="text" required name="Fname" />

                    <br />
                    <br />

                    <label for="Lname">
                        Last name
                    </label>

                    <input type="text" required name="Lname" />

                    <br />
                    <br />

                    <label for="Email">
                        Email
                    </label>

                    <input type="email" required name="Email" id="em" />

                    <br />
                    <br />

                    <label for="Password">
                        Password
                    </label>

                    <input type="password" required name="pw" id="PW" />

                    <br />
                    <br />


                    <label for="Phone">
                        Phone
                    </label>

                    <input type="tel" required name="Phone" id="pn" />

                    <br />
                    <br />

                    <input id="submit" type="submit" />

                </form>
            </div>
        </center>
        

    </div>
